{
  "name": "playwright-vcr",
  "displayName": "PlaywrightVCR",
  "description": "Lightweight Playwright browser record, playback, and recording file export within VSCode. Use AI self healing for resilient test automation.",
  "version": "0.5.1",
  "publisher": "djtrustgod",
  "license": "MIT",
  "icon": "assets/logo/Logo128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/djtrustgod/Playwright-GUI-Recorder-Playback.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "playwright",
    "rpa",
    "automation",
    "recording",
    "self-healing"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "playwrightVcr.startRecording",
        "title": "Start Recording",
        "icon": "$(record)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.stopRecording",
        "title": "Stop Recording",
        "icon": "$(debug-stop)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.playRecording",
        "title": "Play Recording",
        "icon": "$(play)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.openRecordingPanel",
        "title": "Open Recording Panel",
        "icon": "$(add)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.openPlaybackPanel",
        "title": "Open Playback Panel",
        "icon": "$(play-circle)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.openMonitoringPanel",
        "title": "Open Monitoring Panel",
        "icon": "$(graph)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.deleteRecording",
        "title": "Delete Recording",
        "icon": "$(trash)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.exportRecording",
        "title": "Export Recording",
        "icon": "$(export)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.refreshLibrary",
        "title": "Refresh Library",
        "icon": "$(refresh)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.installBrowsers",
        "title": "Install Playwright Browsers",
        "icon": "$(cloud-download)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.openSettings",
        "title": "Open AI Settings",
        "icon": "$(gear)",
        "category": "PlaywrightVCR"
      },
      {
        "command": "playwrightVcr.setApiKey",
        "title": "Set AI Provider API Key",
        "icon": "$(key)",
        "category": "PlaywrightVCR"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "playwrightVcr",
          "title": "PlaywrightVCR",
          "icon": "assets/logo/Logo128.png"
        }
      ]
    },
    "views": {
      "playwrightVcr": [
        {
          "id": "playwrightVcr.library",
          "name": "Recording Library",
          "icon": "$(library)"
        },
        {
          "id": "playwrightVcr.executions",
          "name": "Recent Executions",
          "icon": "$(history)"
        },
        {
          "id": "playwrightVcr.schedules",
          "name": "Schedules",
          "icon": "$(clock)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "playwrightVcr.openRecordingPanel",
          "when": "view == playwrightVcr.library",
          "group": "navigation"
        },
        {
          "command": "playwrightVcr.refreshLibrary",
          "when": "view == playwrightVcr.library",
          "group": "navigation"
        },
        {
          "command": "playwrightVcr.openSettings",
          "when": "view == playwrightVcr.library",
          "group": "navigation"
        },
        {
          "command": "playwrightVcr.openMonitoringPanel",
          "when": "view == playwrightVcr.executions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "playwrightVcr.playRecording",
          "when": "view == playwrightVcr.library && viewItem == recording",
          "group": "inline"
        },
        {
          "command": "playwrightVcr.deleteRecording",
          "when": "view == playwrightVcr.library && viewItem == recording"
        },
        {
          "command": "playwrightVcr.exportRecording",
          "when": "view == playwrightVcr.library && viewItem == recording"
        }
      ]
    },
    "configuration": {
      "title": "PlaywrightVCR",
      "properties": {
        "playwrightVcr.defaultBrowser": {
          "type": "string",
          "default": "chromium",
          "enum": [
            "chromium",
            "firefox",
            "webkit"
          ],
          "description": "Default browser for recording and playback."
        },
        "playwrightVcr.headless": {
          "type": "boolean",
          "default": false,
          "description": "Run playback in headless mode."
        },
        "playwrightVcr.slowMo": {
          "type": "number",
          "default": 0,
          "description": "Slow down playback by this many milliseconds per action."
        },
        "playwrightVcr.selfHealing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable self-healing selector resolution."
        },
        "playwrightVcr.selfHealing.embeddingThreshold": {
          "type": "number",
          "default": 0.85,
          "description": "Cosine similarity threshold for embedding-based element matching (0-1)."
        },
        "playwrightVcr.selfHealing.llmEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable LLM-based selector repair as a last resort."
        },
        "playwrightVcr.ai.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "ollama"
          ],
          "description": "LLM provider for selector repair."
        },
        "playwrightVcr.ai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "LLM model name for selector repair."
        },
        "playwrightVcr.ai.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL for local LLM inference."
        },
        "playwrightVcr.orchestration.maxRetries": {
          "type": "number",
          "default": 3,
          "description": "Maximum retry attempts for failed playback jobs."
        },
        "playwrightVcr.orchestration.concurrency": {
          "type": "number",
          "default": 1,
          "description": "Maximum number of concurrent playback jobs."
        },
        "playwrightVcr.overlayDismissals": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "detector": {
                "type": "string",
                "description": "Locator string to detect the overlay (e.g. text=Accept Cookies)"
              },
              "action": {
                "type": "string",
                "description": "Locator string to click to dismiss the overlay"
              }
            }
          },
          "description": "List of overlay/popup auto-dismissal rules."
        },
        "playwrightVcr.webhookUrl": {
          "type": "string",
          "default": "",
          "description": "Webhook URL for failure notifications (Slack, Discord, Teams, etc.)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts,tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.3.0",
    "node-cron": "^3.0.3",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.41.0",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  }
}
